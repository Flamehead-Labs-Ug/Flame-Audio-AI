# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# User Interface Configuration
AUTH_ENABLED=true
API_KEY_INPUT_ENABLED=true

# Backend URL Configuration (required)
BACKEND_URL=http://localhost:8000  # Required
FRONTEND_URL=http://localhost:8501  # URL for the Streamlit frontend

# Supabase Configuration for Authentication
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Postgres Database Configuration
PG_HOST=your_postgres_host
PG_DATABASE=postgres
PG_USER=your_postgres_user
PG_PASSWORD=your_postgres_password
PG_PORT=6543

# Vector Store Configuration
# Vector store type: "qdrant" is the default
VECTOR_STORE_TYPE=qdrant

# Qdrant Vectorstore Configuration
QDRANT_URL=https://your-qdrant-url.com
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_PORT=6333

# Embedding Model Configuration
EMBEDDING_PROVIDER=hf-inference
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxxxxx

# Supabase Vectorstore Configuration (legacy)
VECTOR_STORE_URL=your_supabase_vectorstore_url
VECTOR_STORE_SERVICE_KEY=your_supabase_vectorstore_service_key

# MCP Service Configuration
MCP_URL=http://localhost:8001 
